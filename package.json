{
  "name": "pokedex",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "eslint-plugin-react-hooks": "^0.0.0",
    "react": "next",
    "react-dom": "next",
    "react-grid-system": "^4.3.1",
    "react-scripts": "2.1.1",
    "styled-components": "^4.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write src/**/*.{js,css}",
    "now-build": "npm run build"
  },
  "eslintConfig": {
    "extends": "mango",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint": "5.6.0",
    "eslint-config-mango": "git+ssh://git@github.com/mango-chutney/eslint-config-mango.git#1355ad8"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
